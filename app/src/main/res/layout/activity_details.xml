<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsActivity">

    <ImageView
        android:id="@+id/imageView_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_repo_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="android/androidX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_avatar" />

    <TextView
        android:id="@+id/textView_stars_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="24 added this week"
        app:layout_constraintEnd_toEndOf="@+id/textView_repo_det"
        app:layout_constraintStart_toStartOf="@+id/textView_repo_det"
        app:layout_constraintTop_toBottomOf="@+id/textView_repo_det" />

    <TextView
        android:id="@+id/textView_desc_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="long description"
        app:layout_constraintEnd_toEndOf="@+id/textView_repo_det"
        app:layout_constraintStart_toStartOf="@+id/textView_repo_det"
        app:layout_constraintTop_toBottomOf="@+id/textView_stars_det" />
</androidx.constraintlayout.widget.ConstraintLayout>